@model List<Company.DataLayer.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-hover">
    <tr>
        <th>Image</th>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date</th>
        <th>Available Status</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Active</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="data:image;base64,@item.photo" width="60px" /></td>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            <td>@item.Price.Value.ToString("c")</td>
            <td>@item.DateOfPurchase.Value.ToString("d/M/yyyy")</td>
            <td>@item.AvailabilityStatus</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.Brand.BrandName</td>
            <td>@item.Active</td>
            <td>
                <a href="/Manager/Product/Details/@item.ProductID" class="btn btn-info btn-sm">Details</a>
                <a href="/Manager/Product/Edit/@item.ProductID" class="btn btn-secondary btn-sm">Edit</a>
                
            </td>
        </tr>
    }

</table>

