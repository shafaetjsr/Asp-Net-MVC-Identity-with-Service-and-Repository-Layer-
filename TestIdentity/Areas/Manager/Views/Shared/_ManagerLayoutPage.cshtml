<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-sm bg-info navbar-dark">
    <a href="#" class="navbar-brand">Manager</a>
    <div class="col-8">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="/Manager/Home/Index" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a href="/Manager/Product/Index" class="nav-link">Product</a>
            </li>
            @if (User.Identity.IsAuthenticated == true)
            {
                <li class="nav-item">
                    <a href="/Account/Logout" class="nav-link">Log Out</a>
                </li>
            }

        </ul>
    </div>

    @if (User.Identity.IsAuthenticated == true)
    {
        <div class="text-white">
            Welcome To @User.Identity.Name
        </div>
    }
</nav>
<div class="container-fluid">
    @RenderBody()
</div>
</body>
</html>
