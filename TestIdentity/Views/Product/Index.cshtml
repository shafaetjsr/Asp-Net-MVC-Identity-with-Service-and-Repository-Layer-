@model List<Company.DataLayer.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="card-group">
    @foreach(var item in Model)
    { 
        <div class="card">
    <img class="card-img-top" src="#"/>
    <div class="card-body">
        <h5 class="card-title">@item.ProductName</h5>
        <p class="card-text">@item.Price</p>
        <p class="card-text"><small class="text-muted">@((item.BrandID != null)?item.Brand.BrandName:"")</small></p>
        <p class="card-text"><small class="text-muted">@((item.CategoryID !=null)?item.Category.CategoryName:"" )</small></p>
    </div>
        </div>
    }
</div>
