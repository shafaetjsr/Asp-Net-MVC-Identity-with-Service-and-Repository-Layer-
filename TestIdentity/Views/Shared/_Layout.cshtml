<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-info navbar-dark">
        <a href="#" class="navbar-brand">Company</a>
        <div class="col-8">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/Home/Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    <a href="/Product/Index" class="nav-link">Product</a>
                </li>
                @if (User.Identity.IsAuthenticated == false)
                {
                    <li class="nav-item">
                        <a href="/Account/Register" class="nav-link">Register</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Account/Login" class="nav-link">Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/Account/Profile" class="nav-link">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Account/Logout" class="nav-link">Log Out</a>
                    </li>

                }

            </ul>
        </div>

        @if (User.Identity.IsAuthenticated == true)
        {
            <div class="text-white">
                Welcome To @User.Identity.Name
            </div>
        }
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
